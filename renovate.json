{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "description": "Pin and automerge latest board-game-collection images",
      "matchManagers": ["helm-values"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/blackjid/board-game-collection"],
      "matchPaths": [
        "kubernetes/apps/development/board-game-collection-dev/app/helmrelease.yaml"
      ],
      "pinDigests": true,
      "automerge": true,
      "automergeType": "branch",
      "updateTypes": ["digest"],
      "schedule": ["at any time"]
    }
  ]
}
